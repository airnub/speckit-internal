{
  "name": "@speckit/core",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./metrics": {
      "types": "./dist/metrics.d.ts",
      "import": "./dist/metrics.mjs",
      "require": "./dist/metrics.cjs"
    },
    "./sanitize": {
      "types": "./dist/sanitize.d.ts",
      "import": "./dist/sanitize.mjs",
      "require": "./dist/sanitize.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/metrics.ts src/sanitize.ts --format esm,cjs --dts --clean --target es2022",
    "test": "vitest run"
  },
  "dependencies": {
    "@speckit/analyzer": "workspace:*",
    "globby": "^14.0.2",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}
