{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@speckit/analyzer": ["packages/speckit-analyzer/src/index.ts"],
      "@speckit/analyzer/*": ["packages/speckit-analyzer/src/*"],
      "@speckit/core": ["packages/speckit-core/src/index.ts"],
      "@speckit/core/*": ["packages/speckit-core/src/*"]
    }
  },
  "include": ["scripts/**/*", "docs/**/*"]
}
