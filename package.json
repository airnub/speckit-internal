{
  "name": "speckit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "description": "TUI + optional AI assistant for spec-driven development: edit specs, propose patches, review diffs, commit. AI/analytics OFF by default.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter '@speckit/*' --filter '!@speckit/docs-website' build",
    "dev": "pnpm --filter @speckit/cli dev",
    "tui": "pnpm --filter @speckit/tui dev",
    "start": "pnpm --filter @speckit/cli start",
    "test": "pnpm -r test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "husky",
    "postinstall": "pnpm build",
    "speckit:run": "tsx scripts/cli.ts run",
    "speckit:coach": "tsx scripts/cli.ts run --coach --watch",
    "speckit:doctor": "tsx scripts/cli.ts doctor",
    "speckit:analyze": "tsx scripts/cli.ts analyze",
    "speckit:replay": "tsx scripts/cli.ts replay",
    "speckit:inject": "tsx scripts/cli.ts inject",
    "speckit:trends": "tsx scripts/analytics/trends.ts"
  },
  "keywords": [
    "spec-driven-development",
    "sdd",
    "tui",
    "cli",
    "ai",
    "agent",
    "repl",
    "ink"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@speckit/analyzer": "workspace:*",
    "@speckit/core": "workspace:*",
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.3.0",
    "@types/node": "^24.5.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "globby": "^14.0.2",
    "husky": "^9.1.6",
    "ink": "^4.4.1",
    "react": "^18.3.1",
    "strip-ansi": "^7.1.0",
    "tsx": "^4.19.1",
    "yaml": "^2.6.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "fs-extra": "11.2.0"
    }
  }
}
